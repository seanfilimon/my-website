// User model and related enums

enum UserRole {
  ADMIN
  EDITOR
  AUTHOR
  VIEWER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  // Profile
  bio      String? @db.Text
  title    String? // "Founder & CEO at LegionEdge"
  website  String?
  github   String?
  twitter  String?
  linkedin String?

  // Role & Permissions
  role UserRole @default(VIEWER)

  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastActiveAt DateTime @default(now())

  // Relations - Content Created
  articles Article[]
  blogs    Blog[]
  courses  Course[]
  videos   Video[]

  // Relations - User Activity
  comments    Comment[]
  enrollments CourseEnrollment[]
  reviews     CourseReview[]
  experiences Experience[]
  
  // Relations - Assets
  assets Asset[]

  @@map("users")
}
